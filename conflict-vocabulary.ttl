
#################################################################

@prefix :        <http://example.org/conflict-ontology/vocab#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix skos:    <http://www.w3.org/2004/02/skos/core#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

#################################################################
# Vocabulary ontology header
#################################################################

:VocabularyOntology
  a owl:Ontology ;
  dcterms:title "Conflict Game Vocabulary (SKOS)"@en ;
  dcterms:description "Controlled vocabularies for categorical variables in conflict game datasets."@en ;
  owl:versionInfo "1.0.0"@en .

#################################################################
# Vocabulary overview
#################################################################

:ConflictVocabulary
  a skos:ConceptScheme ;
  dcterms:title "Conflict Game Vocabulary"@en ;
  dcterms:description """
This vocabulary defines the controlled concepts used to annotate categorical variables in conflict game datasets.
It is meant to be used together with the conflict game ontology.

Concepts are referenced from instances via object properties (e.g., hasRoleConcept, hasGroupRelationConcept).
Using SKOS ensures consistent labels and makes categorical variables interoperable across datasets.
"""@en .

#################################################################
# Decision Role Scheme (d_att_def_within)
#################################################################

:RoleScheme a skos:ConceptScheme ;
  skos:prefLabel "Decision roles"@en ;
  skos:definition "Role of the participant in the decision (attacker or defender)."@en ;
  skos:inScheme :ConflictVocabulary .

:Attacker a skos:Concept ;
  skos:inScheme :RoleScheme ;
  skos:prefLabel "Attacker"@en ;
  skos:altLabel "Attack"@en ;
  skos:definition "Attacker role: the participant makes an attacking decision."@en .

:Defender a skos:Concept ;
  skos:inScheme :RoleScheme ;
  skos:prefLabel "Defender"@en ;
  skos:altLabel "Defense"@en ;
  skos:definition "Defender role: the participant makes a defending decision."@en .

#################################################################
# Group Relation Scheme (d_Ingroup_Outgroup_Stranger)
#################################################################

:GroupRelationScheme a skos:ConceptScheme ;
  skos:prefLabel "Group relations"@en ;
  skos:definition "Relation between the participant and the opponent in an interaction."@en ;
  skos:inScheme :ConflictVocabulary .

:Ingroup a skos:Concept ;
  skos:inScheme :GroupRelationScheme ;
  skos:prefLabel "Ingroup"@en ;
  skos:definition "Opponent belongs to the same group as the participant."@en .

:Outgroup a skos:Concept ;
  skos:inScheme :GroupRelationScheme ;
  skos:prefLabel "Outgroup"@en ;
  skos:definition "Opponent belongs to a different group than the participant."@en .

:Stranger a skos:Concept ;
  skos:inScheme :GroupRelationScheme ;
  skos:prefLabel "Stranger"@en ;
  skos:altLabel "Unknown"@en ;
  skos:definition "Opponent's group membership is unknown to the participant."@en .

